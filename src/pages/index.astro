---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/sections/HeroSection.astro';
import ProblemSection from '../components/sections/ProblemSection.astro';
import ProcessSection from '../components/sections/ProcessSection.astro';
import VideoSection from '../components/sections/VideoSection.astro';
import TestimonialsSection from '../components/sections/TestimonialsSection.astro';
import ContactSection from '../components/sections/ContactSection.astro';
---

<BaseLayout
  title="Make It Global — Localisation de contenus pour votre expansion internationale"
  description="Nous traduisons et adaptons l'ensemble de vos contenus — vidéos, formations, documents, site web — pour vos marchés cibles. Service clé-en-main, livraison sous 48h."
>
  <!-- Main content starts here -->
  <main id="main-content">
    <!-- Hero Section - First section in main content -->
    <HeroSection />

    <!-- Problem/Solution Section -->
    <ProblemSection />

    <!-- Process Section - Turnkey process visualization -->
    <ProcessSection />

    <!-- Video Section - Before/after video examples with lazy loading -->
    <VideoSection />

    <!-- Testimonials Section - Client success stories and results -->
    <TestimonialsSection />

    <!-- Contact Section - Multi-channel conversion (Calendly + WhatsApp) -->
    <ContactSection />
  </main>
</BaseLayout>
