---
/**
 * HeroSection Component - Main hero section with value proposition and dual CTAs
 * Mobile-first responsive design with accessibility features
 */
import { Image } from 'astro:assets';
import CalendlyEmbed from '../ui/CalendlyEmbed.astro';
import WhatsAppButton from '../ui/WhatsAppButton.astro';
import { CALENDLY_URL, WHATSAPP_NUMBER, WHATSAPP_DEFAULT_MESSAGE } from '../../config';
import heroBackground from '../../assets/images/hero-background.svg';
---

<section
  class="relative w-full overflow-hidden animate-fade-in opacity-100"
  aria-label="Hero"
>
  <!-- Hero Background Image with priority (LCP optimization) -->
  <!-- Dark overlay for guaranteed text contrast (WCAG AA compliant) -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/40 to-black/20 -z-5"></div>
  <Image
    src={heroBackground}
    alt="Service de traduction vidéo avec lip-sync professionnel - Make It Global"
    width={1920}
    height={1080}
    loading="eager"
    fetchpriority="high"
    class="absolute inset-0 w-full h-full object-cover -z-10"
  />
  <!-- Content overlay with improved readability -->
  <div class="relative z-10 max-w-4xl mx-auto px-4 py-32 md:py-48 lg:py-64 text-center">
    <!-- Headline with improved contrast over background image -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white drop-shadow-lg leading-tight">
      Traduction vidéo avec lip-sync en 48h
    </h1>

    <!-- Subheadline with improved contrast over background image -->
    <p class="text-lg md:text-xl text-white/95 drop-shadow-md mt-4 md:mt-6 max-w-2xl mx-auto leading-relaxed">
      Service clé-en-main combinant IA et expertise humaine pour traduire vos vidéos, PDFs et textes. Expansion internationale sans effort.
    </p>

    <!-- CTAs -->
    <div class="mt-8 md:mt-10 flex flex-col md:flex-row gap-4 md:gap-6 justify-center items-center">
      <CalendlyEmbed
        calendlyUrl={CALENDLY_URL}
        type="popup"
        buttonText="Réserver mon appel"
        section="hero"
      />

      <WhatsAppButton
        phoneNumber={WHATSAPP_NUMBER}
        message={WHATSAPP_DEFAULT_MESSAGE}
        section="hero"
      />
    </div>
  </div>
</section>
