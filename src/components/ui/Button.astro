---
/**
 * Button Component - Reusable CTA button with primary/secondary variants
 * Ensures WCAG AA accessibility with â‰¥44px touch targets
 */
interface Props {
  variant: 'primary' | 'secondary';
  href: string;
  ariaLabel?: string;
  class?: string;
  'data-section'?: string;
}

const { variant, href, ariaLabel, class: additionalClass, 'data-section': dataSection } = Astro.props;

// Tailwind classes for each variant
const variantClasses = {
  primary: 'bg-primary-600 hover:bg-primary-700 focus:ring-primary-500 text-white',
  secondary: 'bg-accent-500 hover:bg-accent-600 focus:ring-accent-400 text-white',
};

const baseClasses = 'inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold text-base transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 min-h-[44px]';

// Detect external links (http/https) for security attributes
const isExternal = href.startsWith('http://') || href.startsWith('https://');
---

<a
  href={href}
  class={`${baseClasses} ${variantClasses[variant]} ${additionalClass || ''}`}
  aria-label={ariaLabel}
  target={isExternal ? '_blank' : undefined}
  rel={isExternal ? 'noopener noreferrer' : undefined}
  data-section={dataSection}
>
  <slot />
</a>
