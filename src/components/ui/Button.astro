---
/**
 * Button Component - Dark Theme with Cyan accents
 * Ensures WCAG AA accessibility with â‰¥44px touch targets
 */
interface Props {
  variant: 'primary' | 'secondary' | 'outline';
  href: string;
  ariaLabel?: string;
  class?: string;
  'data-section'?: string;
}

const { variant, href, ariaLabel, class: additionalClass, 'data-section': dataSection } = Astro.props;

// Tailwind classes for each variant - Dark Theme
const variantClasses = {
  primary: 'bg-cyan-500 hover:bg-cyan-600 text-dark-base shadow-lg shadow-cyan-500/30 hover:shadow-cyan-500/40 focus:ring-cyan-400',
  secondary: 'bg-primary-500 hover:bg-primary-600 text-white border border-primary-400/30 hover:border-primary-400/50 focus:ring-cyan-400',
  outline: 'border-2 border-cyan-500 text-cyan-400 hover:bg-cyan-500/10 hover:border-cyan-400 focus:ring-cyan-400',
};

const baseClasses = 'inline-flex items-center justify-center px-6 py-3 rounded-lg font-semibold text-base transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-dark-base min-h-[44px]';

// Detect external links (http/https) for security attributes
const isExternal = href.startsWith('http://') || href.startsWith('https://');
---

<a
  href={href}
  class={`${baseClasses} ${variantClasses[variant]} ${additionalClass || ''}`}
  aria-label={ariaLabel}
  target={isExternal ? '_blank' : undefined}
  rel={isExternal ? 'noopener noreferrer' : undefined}
  data-section={dataSection}
>
  <slot />
</a>
