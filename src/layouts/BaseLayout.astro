---
// Props interface for BaseLayout
interface Props {
  title: string;
  description: string;
  ogImage?: string;
}

const { title, description, ogImage = '/og-image.png' } = Astro.props;

// Use Astro.site for production URL (falls back to localhost in dev)
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://make-it-global.vercel.app';
const fullOgImage = `${siteUrl}${ogImage}`;

// Import global styles (TailwindCSS v4)
import '../styles/global.css';

// Import GoogleAnalytics component
import GoogleAnalytics from '../components/GoogleAnalytics.astro';

// Google Analytics ID (optional - graceful degradation if undefined)
const PUBLIC_GOOGLE_ANALYTICS_ID = import.meta.env.PUBLIC_GOOGLE_ANALYTICS_ID;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph Meta Tags (LinkedIn Priority) -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:image" content={fullOgImage} />
    <meta property="og:site_name" content="Make It Global" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={fullOgImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preconnect to video CDNs for performance (200-300ms latency reduction) -->
    <link rel="preconnect" href="https://www.youtube-nocookie.com" />
    <link rel="preconnect" href="https://player.vimeo.com" />
    <link rel="dns-prefetch" href="https://www.youtube.com" />
    <link rel="dns-prefetch" href="https://i.vimeocdn.com" />

    <!-- Preconnect to Calendly CDN for faster scheduling widget load -->
    <link rel="preconnect" href="https://assets.calendly.com" />

    <!-- Preconnect to Google Analytics for faster tracking (100-200ms latency reduction) -->
    <link rel="preconnect" href="https://www.google-analytics.com" crossorigin />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />

    <!-- Calendly SDK - Async load in head for optimal performance -->
    <script async src="https://assets.calendly.com/assets/external/widget.js"></script>

    <!-- Google Analytics 4 (Story 7.1) -->
    <!-- Graceful degradation: Only loaded if PUBLIC_GOOGLE_ANALYTICS_ID is defined -->
    <!-- This allows development/testing without GA4 configured, avoiding errors -->
    <!-- Production: Configure PUBLIC_GOOGLE_ANALYTICS_ID in Vercel env vars -->
    {PUBLIC_GOOGLE_ANALYTICS_ID && (
      <GoogleAnalytics gaId={PUBLIC_GOOGLE_ANALYTICS_ID} />
    )}
  </head>
  <body>
    <!-- Skip Links - Hidden by default, visible on keyboard focus -->
    <nav class="skip-links" aria-label="Navigation rapide">
      <a href="#main-content" class="skip-link">
        Passer au contenu principal
      </a>
      <a href="#videos" class="skip-link">
        Voir les exemples vidéos
      </a>
      <a href="#testimonials" class="skip-link">
        Voir les témoignages
      </a>
      <a href="#contact" class="skip-link">
        Réserver un appel
      </a>
    </nav>

    <!-- Main content wrapper with id for skip link target -->
    <slot />
  </body>
</html>
